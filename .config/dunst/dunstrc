[global]

  # -- display -- #
  monitor = 0
  follow = keyboard
  corner_radius = 7
  sort = yes
  idle_threshold = 120
  geometry = "300x5-30+20"
  indicate_hidden = yes
  shrink = no
  transparency = 0
  horizontal_padding = 10
  notification_height = 30
  separator_height = 2
  padding = 10
  frame_width = 1
  frame_color = "#000000"
  separator_color = frame

  # -- text -- #
  font = ProggyCleanTTSZ Nerd Font 12
  font = Monospace 8
  line_height = 0
  markup = no
  format = "%s\n%b"
  alignment = left
  show_age_threshold = 60
  word_wrap = yes
  ellipsize = middle
  ignore_newline = no
  stack_duplicates = true
  hide_duplicate_count = false
  show_indicators = yes

  # -- history -- #
  sticky_history = yes
  history_length = 5

  # -- misc-- #
  dmenu = /usr/bin/dmenu -p dunst:
  browser = /usr/bin/firefox -new-tab
  title = Dunst
  class = Dunst
  verbosity = mesg
  startup_notification = false
  always_run_script = true

  # -- mouse -- #
  mouse_left_click        = close_current
  mouse_middle_click 	= do_action
  mouse_right_click 	= close_all


[shortcuts]
  close = ctrl+space
  close_all = ctrl+shift+space
  history = ctrl+grave
  context = ctrl+shift+period


[urgency_low]
  background = "#000000"
  foreground = "#00ff9f"
  timeout = 10

[urgency_normal]
  background = "#000000"
  foreground = "#00ff9f"
  frame_color = "#7d314e"
  timeout = 15

[urgency_critical]
  background = "#000000"
  foreground = "#ffffff"
  frame_color = "#ff0000"
  timeout = 0
